{
  "openapi": "3.0.1",
  "info": { "title": "PaperflowAI Offer API", "version": "1.0.0" },
  "servers": [
    { "url": "https://paperflowai-frontend.vercel.app", "description": "production" }
  ],
  "paths": {
    "/api/offers/create": {
      "post": {
        "operationId": "createOffer",
        "summary": "Create offer and generate PDF",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["customerId", "data"],
                "properties": {
                  "customerId": { "type": "string", "description": "Kundkort-ID i PaperflowAI" },
                  "title": { "type": "string" },
                  "amount": { "type": "number" },
                  "currency": { "type": "string", "default": "SEK" },
                  "needsPrint": { "type": "boolean", "default": false },
                  "data": { "type": "object", "description": "Offertdata (kund, rader, villkor, mm.)" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Offert skapad",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["ok", "offer"],
                  "properties": {
                    "ok": { "type": "boolean" },
                    "offer": {
                      "type": "object",
                      "required": ["id", "customer_id", "file_url", "created_at"],
                      "properties": {
                        "id": { "type": "string" },
                        "customer_id": { "type": "string" },
                        "title": { "type": "string" },
                        "amount": { "type": "number" },
                        "currency": { "type": "string" },
                        "file_url": { "type": "string", "format": "uri" },
                        "created_at": { "type": "string", "format": "date-time" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
